<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wirecard.accept">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/manifest_app_name"
        android:supportsRtl="true">
        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="screenSize|screenLayout"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MenuActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WrongAcceptSettingsActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait" />
    </application>
</manifest>
