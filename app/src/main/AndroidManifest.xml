<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wirecard.accept">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Demo app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.login.LoginActivityMaterial"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.menu.MenuActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.login.WrongAcceptSettingsActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.paymentflow.PaymentFlowActivity"
            android:configChanges="screenSize|screenLayout|orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>