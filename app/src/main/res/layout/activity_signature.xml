<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/payment_sign_in_label"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <com.wirecard.accept.activities.paymentflow.signature.SignatureView
        android:id="@+id/signature"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/label"
        android:layout_above="@+id/buttons_section"/>

    <LinearLayout
        android:id="@+id/buttons_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/cancel_signature_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/payment_cancel_button"
            android:theme="@style/MyButton"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/confirm_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/payment_confirm_button"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>


</RelativeLayout>
